{
  "name": "scripts-cli",
  "version": "2.0.1",
  "description": "CLI to run package json scripts and any other scripts in an npm project.",
  "main": "./dist/index.js",
  "types": "./dist/types.d.ts",
  "bin": {
    "scripts-cli": "./dist/index.js"
  },
  "repository": "git+https://github.com/benfc1993/scripts-cli.git",
  "homepage": "https://github.com/benfc1993/scripts-cli#readme",
  "author": "Ben Feldberg Collins",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "esbuild --platform=node --watch --outdir=dist --bundle ./src/index.ts",
    "build": "tsc -p ./tsconfig.build.json && esbuild --platform=node --outdir=dist --bundle --minify ./src/index.ts"
  },
  "keywords": [
    "package",
    "cli",
    "scripts",
    "tool",
    "workflow"
  ],
  "overrides": {
    "glob": "^9"
  },
  "devDependencies": {
    "@swc/core": "^1.4.17",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "commander": "^12.1.0",
    "fuzzy-search": "^3.2.1"
  }
}
